#!/usr/bin/make -f

%:
	dh ${@} 

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_SKIP_RPATH=ON \
		-DINIT_SYSTEM=systemd \
		-DAPPLETS_DIR=/usr/lib/dal/applets \

#	-DAPP_REPO_DIR=/var/cache/dal/applet_repository


override_dh_install:
	ls -R debian/tmp/usr/lib/dal/	
	install -d debian/tmp/var/cache/dal/applet_repository
	install -D -m 755 obj-$(DEB_HOST_MULTIARCH)/bin_linux/bist debian/tmp/usr/bin/bist
	install -D -m 755 obj-$(DEB_HOST_MULTIARCH)/bin_linux/smoketest debian/tmp/usr/bin/smoketest
	cp -r  test/smoketest/applets/* debian/tmp/usr/lib/dal/applets/
	ls -R debian/tmp/usr/lib/dal/

	mv debian/tmp/usr/lib/$(DEB_HOST_MULTIARCH)/*.so debian/tmp/usr/lib/
	dh_install

